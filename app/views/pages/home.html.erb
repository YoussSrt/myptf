<!-- Hero Section -->
<section id="home" class="min-h-screen flex items-center justify-center relative overflow-hidden bg-black" data-aos="fade-up">
  <div id="particles-js" class="absolute inset-0 pointer-events-none"></div>
  <div class="container mx-auto px-4 relative z-10">
    <div class="text-center">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent" data-aos="fade-up">
        Youssef Saroute
      </h1>
      <div class="text-2xl md:text-3xl text-white/80 mb-8" data-aos="fade-up" data-aos-delay="200">
        <span id="typed-text"></span>
      </div>
      <div class="flex justify-center space-x-4" data-aos="fade-up" data-aos-delay="400">
        <a href="#contact" class="btn-primary">Get in Touch</a>
        <a href="#projects" class="btn-secondary">View Projects</a>
      </div>
    </div>
  </div>
</section>

<!-- About Section -->
<section id="about" class="py-20 relative overflow-hidden bg-[#001F23] bg-opacity-40 backdrop-blur-sm">
  <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
  <%= render 'pages/about' %>
</section>

<!-- Projects Section -->
<section id="projects" class="py-20 relative overflow-hidden bg-black">
  <div class="absolute inset-0 bg-dots-pattern opacity-5"></div>
  <%= render 'pages/projects' %>
</section>

<!-- Skills Section -->
<section id="skills" class="py-20 relative overflow-hidden bg-[#001F23] bg-opacity-40 backdrop-blur-sm">
  <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
  <%= render 'pages/skills' %>
</section>

<!-- Testimonials Section -->
<section id="testimonials" class="py-20 relative overflow-hidden bg-black">
  <div class="absolute inset-0 bg-dots-pattern opacity-5"></div>
  <%= render 'pages/testimonials' %>
</section>

<!-- Contact Section -->
<section id="contact" class="py-20 relative overflow-hidden bg-[#001F23] bg-opacity-40 backdrop-blur-sm">
  <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
  <%= render 'pages/contact' %>
</section>

<style>
.bg-grid-pattern {
  background-image: linear-gradient(var(--primary-color) 1px, transparent 1px),
    linear-gradient(to right, var(--primary-color) 1px, transparent 1px);
  background-size: 50px 50px;
}

.bg-dots-pattern {
  background-image: radial-gradient(var(--primary-color) 1px, transparent 1px);
  background-size: 20px 20px;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Initialize Typed.js
  const typed = new Typed('#typed-text', {
    strings: [
      'Full Stack Developer',
      'Ruby on Rails Expert',
      'JavaScript Enthusiast',
      'UI/UX Designer'
    ],
    typeSpeed: 50,
    backSpeed: 30,
    backDelay: 2000,
    loop: true
  });

  // Initialize Particles.js
  particlesJS('particles-js', {
    particles: {
      number: { value: 80, density: { enable: true, value_area: 800 } },
      color: { value: '#ffffff' },
      shape: { type: 'circle' },
      opacity: { value: 0.5, random: false },
      size: { value: 3, random: true },
      line_linked: {
        enable: true,
        distance: 150,
        color: '#ffffff',
        opacity: 0.4,
        width: 1
      },
      move: {
        enable: true,
        speed: 6,
        direction: 'none',
        random: false,
        straight: false,
        out_mode: 'out',
        bounce: false
      }
    },
    interactivity: {
      detect_on: 'canvas',
      events: {
        onhover: { enable: true, mode: 'repulse' },
        onclick: { enable: true, mode: 'push' },
        resize: true
      }
    },
    retina_detect: true
  });

  // Initialize AOS
  AOS.init({
    duration: 1000,
    once: true,
    offset: 100
  });
});
</script>
