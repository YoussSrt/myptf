<style>
@keyframes slideIn {
  from {
    transform: translateX(-100%);
  }
  to {
    transform: translateX(0);
  }
}

.skill-progress {
  animation: none;
}

.skill-item.animate .skill-progress {
  animation: slideIn 1s ease-out forwards;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.8;
    transform: scale(1.1);
  }
}

.animate-pulse {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const skillItems = document.querySelectorAll('.skill-item');

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate');
        observer.unobserve(entry.target);
      }
    });
  }, {
    threshold: 0.5
  });

  skillItems.forEach(item => {
    observer.observe(item);
  });

  // Optional: Add hover effect to show skill details
  const techItems = document.querySelectorAll('.tech-item');
  techItems.forEach(item => {
    const tooltip = document.createElement('div');
    tooltip.className = 'absolute hidden group-hover:block bg-primary text-white text-sm py-1 px-2 rounded -top-8 left-1/2 transform -translate-x-1/2 whitespace-nowrap';
    tooltip.textContent = item.querySelector('img').alt;
    item.firstElementChild.appendChild(tooltip);
  });
});
</script>
