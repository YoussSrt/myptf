<!-- Contact Grid -->
<div class="container mx-auto px-4">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
    <!-- Contact Form -->
    <div class="glass-card p-8 md:p-12">
      <h2 class="text-2xl font-bold text-white mb-8">Send Me a Message</h2>

      <%= form_with(url: api_messages_path, local: true, class: "space-y-6") do |f| %>
        <div>
          <label class="block text-gray-300 mb-2" for="name">Your Name</label>
          <%= f.text_field :name,
              class: "w-full bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:border-primary transition-colors",
              placeholder: "John Doe",
              required: true %>
        </div>

        <div>
          <label class="block text-gray-300 mb-2" for="email">Email Address</label>
          <%= f.email_field :email,
              class: "w-full bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:border-primary transition-colors",
              placeholder: "john@example.com",
              required: true %>
        </div>

        <div>
          <label class="block text-gray-300 mb-2" for="subject">Subject</label>
          <%= f.text_field :subject,
              class: "w-full bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:border-primary transition-colors",
              placeholder: "Project Discussion",
              required: true %>
        </div>

        <div>
          <label class="block text-gray-300 mb-2" for="message">Message</label>
          <%= f.text_area :message,
              class: "w-full bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:border-primary transition-colors",
              placeholder: "Tell me about your project...",
              rows: 6,
              required: true %>
        </div>

        <div>
          <%= f.submit "Send Message",
              class: "w-full btn-primary",
              data: { disable_with: 'Sending...' } %>
        </div>
      <% end %>
    </div>

    <!-- Contact Information -->
