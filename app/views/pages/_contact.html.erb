<!-- Back to Top Button -->
<button id="backToTop"
        class="fixed bottom-8 right-8 bg-primary text-white p-3 rounded-full shadow-lg opacity-0 invisible transform translate-y-4 transition-all duration-300 hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:ring-offset-2 focus:ring-offset-black group">
  <svg class="w-6 h-6 transform group-hover:-translate-y-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
  </svg>
</button>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('contactForm');
  const submitButton = form.querySelector('button[type="submit"]');
  const backToTopButton = document.getElementById('backToTop');

  // Form submission handler
  form.addEventListener('submit', async function(e) {
    e.preventDefault();

    // Add loading state
    submitButton.disabled = true;
    submitButton.classList.add('loading');
    const buttonContent = submitButton.querySelector('span');
    const successIcon = submitButton.querySelector('.success-icon');

    buttonContent.style.opacity = '0';
    submitButton.style.width = `${submitButton.offsetWidth}px`;

    try {
      // Simulate form submission
      await new Promise(resolve => setTimeout(resolve, 1500));

      // Success state
      successIcon.style.opacity = '1';
      successIcon.style.transform = 'scale(1)';
      submitButton.classList.add('bg-green-500');
      submitButton.style.width = '48px';

      // Reset form
      form.reset();

      // Reset button state after delay
      setTimeout(() => {
        submitButton.disabled = false;
        submitButton.classList.remove('loading', 'bg-green-500');
        buttonContent.style.opacity = '1';
        successIcon.style.opacity = '0';
        successIcon.style.transform = 'scale(0.5)';
        submitButton.style.width = '';
      }, 2000);

    } catch (error) {
      // Error state
      submitButton.classList.add('bg-red-500');
      setTimeout(() => {
        submitButton.disabled = false;
        submitButton.classList.remove('loading', 'bg-red-500');
        buttonContent.style.opacity = '1';
      }, 2000);
    }
  });

  // Back to Top button handler
  const toggleBackToTopButton = () => {
    if (window.scrollY > 500) {
      backToTopButton.classList.remove('opacity-0', 'invisible', 'translate-y-4');
    } else {
      backToTopButton.classList.add('opacity-0', 'invisible', 'translate-y-4');
    }
  };

  window.addEventListener('scroll', toggleBackToTopButton);

  backToTopButton.addEventListener('click', () => {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  });
});
</script>

